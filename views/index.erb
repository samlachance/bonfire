<div class="header">
  <h1>Bonfire</h1>
  <nav>
    <ul>
      <li class="skip">Skip nav</li><li>News</li><li>Weather</li><li>Comics</li>
    </ul>
  </nav>
</div>

<div class="wrapper">
  <div class="mini-news">
    <div><i class="fa fa-clock-o"></i> <%= "#{Time.now.hour}:#{Time.now.min}" %><div></div></div><div></div><div></div>
  </div>
  <div class="section">
    <% feed = fetch("https://www.reddit.com/r/tldr/.rss") %>
    <h2><%= feed.title %></h2>
    <p><a href="<%= feed.entries[1].url %>"><%= feed.entries[1].title %></a></p>
  </div>
  <div class="section">
    <% feed = fetch("https://news.google.com/news?cf=all&hl=en&pz=1&ned=us&topic=tc&output=rss") %>
